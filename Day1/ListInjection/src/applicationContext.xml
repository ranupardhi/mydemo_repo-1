<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="q1" class="com.tcs.bean.Question" >
<property name="id" value="1"></property>
<property name="question" value="What is HTML?"></property>
<property name="answers" >
<set>
<value>Html is hypertext markup language</value>
<value>Html is tag based language</value>
<value>Html is web based language</value>
</set>
</property>
</bean>
</beans>